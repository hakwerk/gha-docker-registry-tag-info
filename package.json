{
  "name": "gha-docker-registry-tag-info",
  "description": "GitHub Action to get tag information (primarily the digest) from a docker registry for a given image",
  "version": "v1",
  "author": "hakwerk",
  "private": true,
  "homepage": "https://github.com/hakwerk/gha-docker-registry-tag-info",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hakwerk/gha-docker-registry-tag-info.git"
  },
  "bugs": {
    "url": "https://github.com/hakwerk/gha-docker-registry-tag-info/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Docker"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.js",
    "format:check": "prettier --check **/*.js",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.js --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "got": "^11.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/eslint-parser": "^7.24.6",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0 <9.0.0",
    "eslint-plugin-github": "^5.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.5.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.0"
  }
}
